<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativelayout"
    tools:context=".View.Collection_Overview">

    <TextView
        android:id="@+id/accname"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:background="@color/app_black"
        android:padding="10dp"
        android:text="John Simon"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtmyacc"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/accname"
        android:text="Collections"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@color/app_black"
        android:textSize="35sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/appcont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtmyacc"
        android:layout_marginTop="25dp"
        android:background="@color/app_color_green"
        android:gravity="center"
        android:paddingLeft="70dp"
        android:paddingTop="25dp"
        android:paddingRight="70dp"
        android:paddingBottom="25dp"
        android:text="View all your categories below or create a new category."
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    


